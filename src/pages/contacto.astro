---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Contact from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import PictureOptimized from '~/components/common/PictureOptimized.astro';
import headerContacto from '~/assets/images/header-contacto.jpg';
import SectionDivider from '~/components/ui/SectionDivider.astro';

const metadata = {
  title: 'Contacto',
  description: "Contacte Antares Equity Partners. Conversación 100% confidencial. Santo Domingo, RD. info@antaresep.com +1 809 544 2082",
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Contacto"
    title="Iniciemos una conversación 100% confidencial"
    subtitle="Sin compromiso. Entendemos la sensibilidad del tema y manejamos todo con discreción."
  >
    <Fragment slot="bg">
      <PictureOptimized src="~/assets/images/header-contacto.jpg" alt="" aria-hidden="true" class="absolute inset-0 w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/80 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-b from-transparent to-[var(--aw-color-bg-page)] pointer-events-none"></div>
    </Fragment>
  </HeroText>
  <SectionDivider />

  <Contact
    id="form"
    title="Enviar mensaje confidencial"
    subtitle="Gracias. Nos pondremos en contacto en las próximas 24 horas hábiles."
    inputs={[
      {
        type: 'text',
        name: 'nombre',
        label: 'Nombre completo',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
        required: true,
      },
      {
        type: 'text',
        name: 'telefono',
        label: 'Teléfono',
      },
    ]}
    textarea={{
      label: 'Mensaje',
      name: 'mensaje',
    }}
  />

  <Features2
    columns={1}
    items={[
      {
        title: 'Dirección',
        description: 'Calle Cub Scout #19<br/>Naco, Santo Domingo, DN 10120<br/>República Dominicana',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Teléfono',
        description: '+1 809 544 2082',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info@antaresep.com',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
