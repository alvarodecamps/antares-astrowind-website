---
import Layout from '~/layouts/PageLayout.astro';
import { SEO as AstroSeo } from 'astro-seo';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import PictureOptimized from '~/components/common/PictureOptimized.astro';
import headerSoluciones from '~/assets/images/header-soluciones.jpg';
import SectionDivider from '~/components/ui/SectionDivider.astro';
---

<Layout>
  <AstroSeo
    title="Soluciones de Inversión"
    description="Soluciones de capital privado: Alianza de Crecimiento (venta parcial) o Transición de Legado (venta total). Proceso confidencial 60-90 días."
  />
  <HeroText
    tagline="Soluciones"
    title="Estructuras a su medida"
    subtitle="Alianza de Crecimiento o Transición de Legado"
  >
    <Fragment slot="bg">
      <PictureOptimized src="~/assets/images/header-soluciones.jpg" alt="" aria-hidden="true" class="absolute inset-0 w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/80 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-b from-transparent to-[var(--aw-color-bg-page)] pointer-events-none"></div>
    </Fragment>
  </HeroText>
  <SectionDivider />
  <main class="container mx-auto py-16 px-4">

    <Content
        id="alianza-crecimiento"
        title="Alianza de Crecimiento"
        subtitle="Inyecte capital y experiencia para acelerar su visión."
        items={[
            {
                title: '¿Para Quién?',
                description: 'Empresas con oportunidades claras de expansión o profesionalización<br/>Dueños que desean liquidez parcial manteniendo rol activo<br/>Negocios sólidos que toparon su techo y necesitan un socio estratégico'
            },
            {
                title: '¿Cómo Funciona?',
                description: 'Invertimos en minoría o mayoría, según metas y alineación<br/>Usted mantiene liderazgo operativo o rol de consejo<br/>Trabajo de junta, plan de 100 días, M&A aditivo y disciplina de métricas'
            },
            {
                title: '¿Qué Aportamos?',
                description: 'Gobernanza, rigor comercial y de costos, tecnología, talento y acceso a red.'
            }
        ]}
    />

    <Content
        id="transicion-legado"
        isReversed
        title="Transición de Legado"
        subtitle="Asegure su futuro y el de la empresa que construyó."
        items={[
            {
                title: '¿Para Quién?',
                description: 'Fundadores cercanos al retiro sin sucesión definida<br/>Propietarios que buscan una salida completa y ordenada'
            },
            {
                title: '¿Cómo Funciona?',
                description: 'Adquirimos el 100% con un plan de transición sin sobresaltos<br/>Período opcional de asesoría del fundador<br/>Continuidad del equipo y respeto por la cultura'
            },
            {
                title: '¿Qué Aportamos?',
                description: 'Proceso discreto, valoración justa, cierre ágil y cuidado del legado.'
            }
        ]}
    />

    <Features
        id="criterios"
        title="Criterios de Inversión"
        subtitle="Nos enfocamos en empresas dominicanas con escala, caja y potencial de crecimiento."
        columns={3}
        items={[
          {
            title: 'Ventas Anuales',
            description: '> US$5 millones',
            icon: 'tabler:currency-dollar',
          },
          {
            title: 'EBITDA',
            description: '> US$1 millón',
            icon: 'tabler:scale',
          },
          {
            title: 'Participación',
            description: 'Minoría significativa, mayoría o 100%',
            icon: 'tabler:percentage',
          },
          {
            title: 'Sectores',
            description: 'Servicios, tecnología aplicada, distribución, manufactura liviana, medios digitales',
            icon: 'tabler:building-factory-2',
          },
          {
            title: 'Geografía',
            description: 'República Dominicana (Caribe selecto)',
            icon: 'tabler:map-2',
          },
          {
            title: 'Horizonte',
            description: '5–10 años, enfoque de creación de valor',
            icon: 'tabler:timeline',
          },
        ]}
    />

    <Steps
        title="Proceso ágil y confidencial (60–90 días)"
        items={[
            {
                title: 'Exploración',
                description: 'Objetivos, NDA, fit estratégico',
                icon: 'tabler:search',
            },
            {
                title: 'Pre-evaluación',
                description: 'Información clave y oferta indicativa',
                icon: 'tabler:file-text',
            },
            {
                title: 'Due diligence',
                description: 'Financiera, legal y operativa, con mínima disrupción',
                icon: 'tabler:checkup-list',
            },
            {
                title: 'Acuerdo y cierre',
                description: 'Términos definitivos y plan de transición',
                icon: 'tabler:file-check',
            }
        ]}
    />

  </main>
</Layout>
