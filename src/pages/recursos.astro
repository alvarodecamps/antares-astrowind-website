---
import Layout from '~/layouts/PageLayout.astro';
import { SEO as AstroSeo } from 'astro-seo';
import Features from '~/components/widgets/Features.astro';
import Note from '~/components/widgets/Note.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import PictureOptimized from '~/components/common/PictureOptimized.astro';
import SectionDivider from '~/components/ui/SectionDivider.astro';
---

<Layout>
  <AstroSeo
    title="Centro de Recursos"
    description="Guías gratuitas para empresarios: valoración, preparación para venta, sucesión familiar. Recursos para empresas >US$5M en ventas."
  />
  <HeroText
    tagline="Recursos"
    title="Recursos para Empresarios"
    subtitle="Guías prácticas para decisiones de capital y sucesión"
  >
    <Fragment slot="bg">
      <PictureOptimized src="~/assets/images/header-inicio.jpg" alt="" aria-hidden="true" class="absolute inset-0 w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-b from-transparent to-[var(--aw-color-bg-page)] pointer-events-none"></div>
    </Fragment>
  </HeroText>
  <SectionDivider />
  <main class="container mx-auto py-16 px-4">
    

    <Features
        columns={2}
        items={[
            {
                title: '📊 Guía: ¿Está listo para vender?',
                description: 'Señales personales y de negocio',
                icon: 'tabler:download',
                callToAction: {
                    text: 'Descargar guía',
                    href: '/docs/guia-comparacion-compradores.pdf',
                    'data-gtag-event': 'download_guia_compradores',
                }
            },
            {
                title: '✅ Checklist: Documentos para transacción',
                description: 'Documentos y procesos para una transacción fluida',
                icon: 'tabler:download',
                callToAction: {
                    text: 'Solicitar checklist',
                    href: '/contacto?asunto=checklist',
                    'data-gtag-event': 'solicitar_checklist',
                }
            },
            {
                title: '🧮 Calculadora indicativa',
                description: 'Estimación basada en EBITDA y caja',
                icon: 'tabler:calculator',
                callToAction: {
                    text: 'Solicitar acceso',
                    href: '/contacto?asunto=calculadora',
                    'data-gtag-event': 'solicitar_calculadora',
                }
            },
            {
                title: '💡 Perspectivas del mercado',
                description: 'Nearshoring, profesionalización y sucesión familiar',
                icon: 'tabler:article',
                callToAction: {
                    text: 'Leer perspectivas',
                    href: '/blog',
                    'data-gtag-event': 'ir_blog',
                }
            },
        ]}
    />
    <Note
        label="ℹ️"
        text="Si su empresa factura > US$5M y tiene caja recurrente, probablemente califica para conversar."
    />
  </main>
</Layout>
